@using SFA.DAS.RoatpAssessor.Web.ApplyTypes.Moderator; 
@model SFA.DAS.RoatpAssessor.Web.ApplyTypes.Clarification.ModerationOutcome

@{
    var assessor1CssModifierClassName = ModeratorPageReviewStatus.Pass.Equals(Model.ModeratorReviewStatus) ? "das-tag--solid-green" : "das-tag--solid-red";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <table class="govuk-table govuk-!-margin-bottom-9">
            <caption class="govuk-table__caption govuk-heading-m">Outcome of moderation</caption>
            <thead class="govuk-table__head">
                <tr class="govuk-table__row">
                    <th class="govuk-table__header govuk-!-width-one-quarter"></th>
                    <th class="govuk-table__header">@Model.ModeratorName</th>
                </tr>
            </thead>
            <tbody class="govuk-table__body">
                <tr class="govuk-table__row">
                    <th class="govuk-table__header">Outcome</th>
                    <td class="govuk-table__cell"><strong class="das-tag @assessor1CssModifierClassName">@Model.ModeratorReviewStatus</strong></td>
                </tr>
                <tr class="govuk-table__row">
                    <th class="govuk-table__header">Internal Comments</th>
                    <td class="govuk-table__cell">@Model.ModeratorReviewComment</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>