@using SFA.DAS.RoatpAssessor.Web.Extensions
@using SFA.DAS.RoatpAssessor.Web.ApplyTypes

@model SFA.DAS.RoatpAssessor.Web.ViewModels.AssessorApplicationViewModel

@{
    ViewBag.Title = "Assessor evaluation";
    Layout = "_Layout";
}

<div class="govuk-breadcrumbs">
    <ol class="govuk-breadcrumbs__list">
        <li class="govuk-breadcrumbs__list-item">
            <a class="govuk-breadcrumbs__link" href="/Home">RoATP applications</a>
        </li>
        <li class="govuk-breadcrumbs__list-item">
            <a class="govuk-breadcrumbs__link" href="/Home/NewApplications">New applications</a>
        </li>
        <li class="govuk-breadcrumbs__list-item" aria-current="page">Application assessment overview</li>
    </ol>
</div>

<main class="govuk-main-wrapper " id="main-content" role="main">

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="error-summary">
                    <h2 class="govuk-error-summary__title" id="error-summary-title">
                        There is a problem
                    </h2>
                    <div class="govuk-error-summary__body">
                        <ul class="govuk-list govuk-error-summary__list">
                            @*
                                NOTE: This is for the 'Ready for Moderation' step
                                ModelState.AddModelError("IsAssessorApproved", "Please evaluate Assessor");
                            *@
                            <li><a sfa-validation-for="IsAssessorApproved"></a></li>
                        </ul>
                    </div>
                </div>
            }

            <h1 class="govuk-heading-xl">Application assessment overview</h1>

            <dl class="govuk-summary-list">
                @if (!string.IsNullOrWhiteSpace(Model.Ukprn))
                {
                    <div class="govuk-summary-list__row">
                        <dt class="govuk-summary-list__key">
                            UKPRN
                        </dt>
                        <dd class="govuk-summary-list__value">
                            @Model.Ukprn
                        </dd>
                    </div>
                }
                @if (!string.IsNullOrWhiteSpace(Model.OrganisationName))
                {
                    <div class="govuk-summary-list__row">
                        <dt class="govuk-summary-list__key">
                            Legal name
                        </dt>
                        <dd class="govuk-summary-list__value">
                            @Model.OrganisationName
                        </dd>
                    </div>
                }
                @if (!string.IsNullOrWhiteSpace(Model.ApplicationRoute))
                {
                    <div class="govuk-summary-list__row">
                        <dt class="govuk-summary-list__key">
                            Provider route
                        </dt>
                        <dd class="govuk-summary-list__value">
                            @Model.ApplicationRoute
                        </dd>
                    </div>
                }
                @if (!string.IsNullOrWhiteSpace(Model.ApplicationReference))
                {
                    <div class="govuk-summary-list__row">
                        <dt class="govuk-summary-list__key">
                            Application reference
                        </dt>
                        <dd class="govuk-summary-list__value">
                            @Model.ApplicationReference
                        </dd>
                    </div>
                }
                @if (Model.SubmittedDate.HasValue)
                {
                    <div class="govuk-summary-list__row">
                        <dt class="govuk-summary-list__key">
                            Application submitted date
                        </dt>
                        <dd class="govuk-summary-list__value">
                            @Model.SubmittedDate.ToSfaShortDateString()
                        </dd>
                    </div>
                }
            </dl>
        </div>
    </div>

    @if (Model.Sequences.Any())
    {
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <ol class="app-task-list">
                    @{ var index = 0; }
                    @foreach (var sequence in Model.Sequences)
                    {
                        index++;
                        <li>
                            <h2 class="app-task-list__section">
                                <span class="app-task-list__section-number">@index. </span>@sequence.SequenceTitle
                            </h2>
                            <ul class="app-task-list__items">
                                @foreach (var currentSection in sequence.Sections)
                                {
                                    <li class="app-task-list__item">
                                        <span class="app-task-list__task-name app-task-list__task-name--inactive">
                                            <a asp-controller="SectionReview" asp-action="ReviewPageAnswers" asp-route-applicationId="@Model.ApplicationId" asp-route-sequenceNumber="@sequence.SequenceNumber" asp-route-sectionNumber="@currentSection.SectionNumber" class="govuk-link">@currentSection.LinkTitle</a>
                                        </span>
                                        @if (!string.IsNullOrWhiteSpace(currentSection.Status))
                                        {
                                            var cssModifierClassName = Model.GetStatusCss(currentSection.Status);
                                            <strong class="govuk-tag @cssModifierClassName das-no-wrap">@currentSection.Status</strong>
                                        }
                                    </li>
                                }
                            </ul>
                        </li>
                    }
                    <li>
                        <h2 class="app-task-list__section">
                            <span class="app-task-list__section-number">6. </span>Assessor outcome
                        </h2>
                        <ul class="app-task-list__items">
                            <li class="app-task-list__item">
                                <span class="app-task-list__task-name app-task-list__task-name--inactive">
                                    @if (Model.IsReadyForModeration)
                                    {
                                        // TODO: Integrate with 'Ready for Moderation' action
                                        <a href="#">Ready for moderation</a>
                                    }
                                    else
                                    {
                                        <text>Ready for moderation</text>
                                    }
                                </span>
                            </li>
                        </ul>
                    </li>
                </ol>
            </div>
        </div>
    }
</main>