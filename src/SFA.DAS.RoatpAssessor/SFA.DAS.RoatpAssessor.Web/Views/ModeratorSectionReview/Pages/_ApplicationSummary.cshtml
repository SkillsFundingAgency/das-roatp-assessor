@using SFA.DAS.AdminService.Common.Extensions;

@model SFA.DAS.RoatpAssessor.Web.ViewModels.ApplicationSummaryAndBreadcrumbViewModel

<dl class="govuk-summary-list govuk-!-margin-bottom-9">
    @if (!string.IsNullOrWhiteSpace(Model.Ukprn))
    {
        <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
                UKPRN
            </dt>
            <dd class="govuk-summary-list__value">
                @Model.Ukprn
            </dd>
        </div>
    }
    @if (!string.IsNullOrWhiteSpace(Model.ApplyLegalName))
    {
        <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
                Legal name
            </dt>
            <dd class="govuk-summary-list__value">
                @Model.ApplyLegalName
            </dd>
        </div>
    }
    @if (!string.IsNullOrWhiteSpace(Model.ApplicationRoute))
    {
        <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
                Provider route
            </dt>
            <dd class="govuk-summary-list__value">
                @Model.ApplicationRouteShortText
            </dd>
        </div>
    }
    @if (Model.SubmittedDate.HasValue)
    {
        <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
                Application submitted date
            </dt>
            <dd class="govuk-summary-list__value">
               @Model.SubmittedDate.ToSfaShortDateString()
            </dd>
        </div>
    }
</dl>