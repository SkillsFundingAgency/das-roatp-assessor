@using SFA.DAS.RoatpAssessor.Web.ApplyTypes.Assessor; 
@model SFA.DAS.RoatpAssessor.Web.ApplyTypes.Moderator.BlindAssessmentOutcome

@{
    var assessor1CssModifierClassName = AssessorPageReviewStatus.Pass.Equals(Model.Assessor1ReviewStatus) ? "govuk-tag-positive" : "govuk-tag-negative";
    var assessor2CssModifierClassName = AssessorPageReviewStatus.Pass.Equals(Model.Assessor2ReviewStatus) ? "govuk-tag-positive" : "govuk-tag-negative";
}

<div class="govuk-grid-column-full">
    <h2 class="govuk-heading-m">Outcome of blind assessment</h2>

    <table class="govuk-table govuk-table__modoutcome">
        <thead class="govuk-table__head">
            <tr class="govuk-table__row">
                <th class="govuk-table__header"></th>
                <th class="govuk-table__header">@Model.Assessor1Name</th>
                <th class="govuk-table__header">@Model.Assessor2Name</th>
            </tr>
        </thead>
        <tbody class="govuk-table__body">
            <tr class="govuk-table__row">
                <th class="govuk-table__header">Outcome</th>
                <td class="govuk-table__cell"><strong class="govuk-tag @assessor1CssModifierClassName">@Model.Assessor1ReviewStatus</strong></td>
                <td class="govuk-table__cell"><strong class="govuk-tag @assessor2CssModifierClassName">@Model.Assessor2ReviewStatus</strong></td>
            </tr>
            <tr class="govuk-table__row">
                <th class="govuk-table__header">Internal comments</th>
                <td class="govuk-table__cell">@Model.Assessor1ReviewComment</td>
                <td class="govuk-table__cell">@Model.Assessor2ReviewComment</td>
            </tr>
        </tbody>
    </table>
</div>